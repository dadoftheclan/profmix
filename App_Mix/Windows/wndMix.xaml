<Window x:Class="App_Mix.Windows.wndMix"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_Mix.Windows"
        mc:Ignorable="d"
        Title="ProfMix" Height="600" Width="900" MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF00FF90"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Border.Effect>
                                <DropShadowEffect Color="Lime" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF00FF66"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF00DD44"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#FF666666"/>
                                <Setter Property="Foreground" Value="#FFAAAAAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Browse Button Style -->
        <Style x:Key="BrowseButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FF00FF90"/>
            <Setter Property="Width" Value="90"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF00FF66"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF00DD44"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Preview Button Style -->
        <Style x:Key="PreviewButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FF66FF33"/>
            <Setter Property="Width" Value="90"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF77FF44"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF55EE22"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF00FF66"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <Border.Effect>
                                <DropShadowEffect Color="Lime" BlurRadius="4" ShadowDepth="0" Opacity="0.3"/>
                            </Border.Effect>
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Focusable="false" 
                                        HorizontalScrollBarVisibility="Hidden" 
                                        VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF00FF90"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF00FF90"/>
                                <Setter TargetName="border" Property="Background" Value="#FF353535"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF00FF66"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" 
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Focusable="false"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="border" 
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4">
                                            <Border.Effect>
                                                <DropShadowEffect Color="Lime" BlurRadius="4" ShadowDepth="0" Opacity="0.3"/>
                                            </Border.Effect>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <Path x:Name="Arrow" Grid.Column="1" 
                                                      Fill="#FF00FF90" 
                                                      HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center" 
                                                      Data="M 0 0 L 4 4 L 8 0 Z"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="BorderBrush" Value="#FF00FF90"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite" 
                                            IsHitTestVisible="False" 
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                            Margin="10,3,30,3"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"/>
                            <TextBox x:Name="PART_EditableTextBox" 
                                   Style="{x:Null}" 
                                   HorizontalAlignment="Left" 
                                   VerticalAlignment="Center" 
                                   Margin="3,3,23,3"
                                   Focusable="True" 
                                   Background="Transparent"
                                   Foreground="White"
                                   Visibility="Hidden"
                                   IsReadOnly="{TemplateBinding IsReadOnly}"/>
                            <Popup x:Name="Popup" 
                                 Placement="Bottom"
                                 IsOpen="{TemplateBinding IsDropDownOpen}"
                                 AllowsTransparency="True" 
                                 Focusable="False"
                                 PopupAnimation="Slide">
                                <Grid x:Name="DropDown" 
                                    SnapsToDevicePixels="True"
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" 
                                          Background="#FF2D2D2D" 
                                          BorderThickness="1"
                                          BorderBrush="#FF00FF66"
                                          CornerRadius="4">
                                        <Border.Effect>
                                            <DropShadowEffect Color="Lime" BlurRadius="8" ShadowDepth="0" Opacity="0.4"/>
                                        </Border.Effect>
                                    </Border>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEditable" Value="true">
                                <Setter Property="IsTabStop" Value="false"/>
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern GroupBox Style -->
        <Style x:Key="ModernGroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" 
                                    Background="#FF00FF90" 
                                    CornerRadius="6,6,0,0" 
                                    Padding="15,8">
                                <Border.Effect>
                                    <DropShadowEffect Color="Lime" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                                </Border.Effect>
                                <ContentPresenter ContentSource="Header" 
                                                TextBlock.Foreground="Black"
                                                TextBlock.FontWeight="SemiBold"/>
                            </Border>
                            <Border Grid.Row="1" 
                                    Background="#FF2D2D2D" 
                                    CornerRadius="0,0,6,6" 
                                    BorderBrush="#FF00FF66" 
                                    BorderThickness="1,0,1,1">
                                <Border.Effect>
                                    <DropShadowEffect Color="Lime" BlurRadius="4" ShadowDepth="0" Opacity="0.2"/>
                                </Border.Effect>
                                <ContentPresenter Margin="15"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Slider Style -->
        <Style x:Key="ModernSliderStyle" TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Track x:Name="PART_Track" Grid.Row="1">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Style="{x:Null}" Background="#FF00FF90" Height="6"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Style="{x:Null}" Background="#FF444444" Height="6"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{x:Null}" Background="White" Width="18" Height="18">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Fill="{TemplateBinding Background}" 
                                                       Stroke="#FF00FF90" 
                                                       StrokeThickness="2">
                                                    <Ellipse.Effect>
                                                        <DropShadowEffect Color="Lime" BlurRadius="6" ShadowDepth="0" Opacity="0.8"/>
                                                    </Ellipse.Effect>
                                                </Ellipse>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Storyboard x:Key="GreenGlowAnimation" RepeatBehavior="Forever">
            <DoubleAnimation 
            Storyboard.TargetName="GlowEffect" 
            Storyboard.TargetProperty="Opacity"
            From="0.3" To="0.8" Duration="0:0:2"
            AutoReverse="True"/>
        </Storyboard>

    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard Storyboard="{StaticResource GreenGlowAnimation}"/>
        </EventTrigger>
    </Window.Triggers>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <!-- Green Glow Effect Background -->
            <Border x:Name="GlowEffect" 
            CornerRadius="15" 
            Margin="-5">
                <Border.Background>
                    <RadialGradientBrush Center="0.5,0.5" RadiusX="0.8" RadiusY="0.6">
                        <GradientStop Color="#4000FF90" Offset="0"/>
                        <GradientStop Color="#2000FF90" Offset="0.7"/>
                        <GradientStop Color="#0000FF90" Offset="1"/>
                    </RadialGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <BlurEffect Radius="20"/>
                </Border.Effect>
            </Border>

            <!-- Main Header Content -->
            <Border CornerRadius="10" Padding="15">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FF00FF90" Offset="0"/>
                        <GradientStop Color="#FF00DD66" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect Color="Lime" BlurRadius="15" ShadowDepth="0" Opacity="0.8"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="../ProfMix_Transparent.png" Width="32" Height="32" 
                   VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="ProfMix" 
                           FontSize="20" FontWeight="Bold" 
                           Foreground="Black" 
                           HorizontalAlignment="Center"/>
                        <TextBlock Text="Professional voice over mixing tool" 
                           FontSize="11" 
                           Foreground="#FF003300"
                           HorizontalAlignment="Center"
                           FontStyle="Italic"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Voice File Selection -->
        <GroupBox Grid.Row="1" Header="🎤 Voice Recording" Margin="0,0,0,10" Style="{StaticResource ModernGroupBoxStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBox x:Name="TxtVoicePath" Grid.Column="0" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         IsReadOnly="True" Margin="0,0,10,0"/>
                <Button x:Name="BtnSelectVoice" Grid.Column="1" 
                        Content="Browse" 
                        Click="BtnSelectVoice_Click" 
                        Style="{StaticResource BrowseButtonStyle}"
                        Margin="0,0,10,0"/>
                <Button x:Name="BtnPreviewVoice" Grid.Column="2" 
                        Content="▶ Preview" 
                        Click="BtnPreviewVoice_Click" 
                        Style="{StaticResource PreviewButtonStyle}"
                        IsEnabled="False"
                        Tag="Play"/>

                <Border Grid.Row="1" Grid.ColumnSpan="3" 
                        Background="#FF373737" 
                        CornerRadius="6" 
                        Margin="0,15,0,0" 
                        Padding="15">
                    <Border.Effect>
                        <DropShadowEffect Color="Lime" BlurRadius="4" ShadowDepth="0" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Volume:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,15,0" 
                                   Foreground="White" 
                                   FontWeight="SemiBold"/>
                        <Slider x:Name="SliderVoiceVolume" 
                                Width="250" 
                                Minimum="0" Maximum="100" Value="100" 
                                Style="{StaticResource ModernSliderStyle}"
                                VerticalAlignment="Center"/>
                        <Border Background="#FF00FF90" 
                                CornerRadius="12" 
                                Padding="10,4" 
                                Margin="15,0,0,0">
                            <Border.Effect>
                                <DropShadowEffect Color="Lime" BlurRadius="6" ShadowDepth="0" Opacity="0.6"/>
                            </Border.Effect>
                            <TextBlock Text="{Binding ElementName=SliderVoiceVolume, Path=Value, StringFormat={}{0:F0}%}" 
                                       Foreground="Black" 
                                       FontWeight="Bold"/>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </GroupBox>

        <!-- Music File Selection -->
        <GroupBox Grid.Row="2" Header="🎶 Background Music" Margin="0,0,0,10" Style="{StaticResource ModernGroupBoxStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBox x:Name="TxtMusicPath" Grid.Column="0" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         IsReadOnly="True" Margin="0,0,10,0"/>
                <Button x:Name="BtnSelectMusic" Grid.Column="1" 
                        Content="Browse" 
                        Click="BtnSelectMusic_Click" 
                        Style="{StaticResource BrowseButtonStyle}"
                        Margin="0,0,10,0"/>
                <Button x:Name="BtnPreviewMusic" Grid.Column="2" 
                        Content="▶ Preview" 
                        Click="BtnPreviewMusic_Click" 
                        Style="{StaticResource PreviewButtonStyle}"
                        IsEnabled="False"
                        Tag="Play"/>

                <Border Grid.Row="1" Grid.ColumnSpan="3" 
                        Background="#FF373737" 
                        CornerRadius="6" 
                        Margin="0,15,0,0" 
                        Padding="15">
                    <Border.Effect>
                        <DropShadowEffect Color="Lime" BlurRadius="4" ShadowDepth="0" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <!-- Volume Control -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="Volume:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,15,0" 
                                       Foreground="White" 
                                       FontWeight="SemiBold"
                                       Width="80"/>
                            <Slider x:Name="SliderMusicVolume" 
                                    Width="200" 
                                    Minimum="0" Maximum="100" Value="30" 
                                    Style="{StaticResource ModernSliderStyle}"
                                    VerticalAlignment="Center"/>
                            <Border Background="#FF00FF90" 
                                    CornerRadius="12" 
                                    Padding="8,4" 
                                    Margin="15,0,0,0">
                                <Border.Effect>
                                    <DropShadowEffect Color="Lime" BlurRadius="6" ShadowDepth="0" Opacity="0.6"/>
                                </Border.Effect>
                                <TextBlock Text="{Binding ElementName=SliderMusicVolume, Path=Value, StringFormat={}{0:F0}%}" 
                                           Foreground="Black" 
                                           FontWeight="Bold"/>
                            </Border>
                        </StackPanel>

                        <!-- Start Offset Control -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="Start at:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,15,0" 
                                       Foreground="White" 
                                       FontWeight="SemiBold"
                                       Width="80"/>
                            <Slider x:Name="SliderMusicOffset" 
                                    Width="200" 
                                    Minimum="0" Maximum="120" Value="0" 
                                    Style="{StaticResource ModernSliderStyle}"
                                    VerticalAlignment="Center"/>
                            <Border Background="#FF66FF33" 
                                    CornerRadius="12" 
                                    Padding="8,4" 
                                    Margin="15,0,0,0">
                                <Border.Effect>
                                    <DropShadowEffect Color="Lime" BlurRadius="6" ShadowDepth="0" Opacity="0.6"/>
                                </Border.Effect>
                                <TextBlock Text="{Binding ElementName=SliderMusicOffset, Path=Value, StringFormat={}{0:F0}s}" 
                                           Foreground="Black" 
                                           FontWeight="Bold"/>
                            </Border>
                        </StackPanel>

                        <!-- Buffer Length Control -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Fade Out:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,15,0" 
                                       Foreground="White" 
                                       FontWeight="SemiBold"
                                       Width="80"/>
                            <Slider x:Name="SliderBufferLength" 
                                    Width="200" 
                                    Minimum="0" Maximum="30" Value="10" 
                                    Style="{StaticResource ModernSliderStyle}"
                                    VerticalAlignment="Center"/>
                            <Border Background="#FF44FF22" 
                                    CornerRadius="12" 
                                    Padding="8,4" 
                                    Margin="15,0,0,0">
                                <Border.Effect>
                                    <DropShadowEffect Color="Lime" BlurRadius="6" ShadowDepth="0" Opacity="0.6"/>
                                </Border.Effect>
                                <TextBlock Text="{Binding ElementName=SliderBufferLength, Path=Value, StringFormat={}{0:F0}s}" 
                                           Foreground="Black" 
                                           FontWeight="Bold"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </GroupBox>

        <!-- Output File Selection -->
        <GroupBox Grid.Row="3" Header="💾 Output File" Margin="0,0,0,10" Style="{StaticResource ModernGroupBoxStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="TxtOutputPath" Grid.Row="0" Grid.Column="0" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         IsReadOnly="True" Margin="0,0,10,0"/>
                <Button x:Name="BtnSelectOutputPath" Grid.Row="0" Grid.Column="1" 
                        Content="📁 Save As" 
                        Click="BtnSelectOutputPath_Click" 
                        Style="{StaticResource BrowseButtonStyle}"
                        Width="110"/>

                <!-- Profile Selection Row -->
                <Border Grid.Row="1" Grid.ColumnSpan="2" 
                        Background="#FF373737" 
                        CornerRadius="6" 
                        Margin="0,15,0,0" 
                        Padding="15">
                    <Border.Effect>
                        <DropShadowEffect Color="Lime" BlurRadius="4" ShadowDepth="0" Opacity="0.2"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Audio Profile:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,15,0" 
                                   Foreground="White" 
                                   FontWeight="SemiBold"/>

                        <ComboBox x:Name="CmbProfiles" Grid.Column="1" 
                                  Style="{StaticResource ModernComboBoxStyle}"
                                  SelectionChanged="CmbProfiles_SelectionChanged"
                                  Margin="0,0,10,0">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="12"/>
                                        <TextBlock Text="{Binding FormatDisplay}" FontSize="10" Foreground="#FFCCCCCC" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <Button x:Name="BtnManageProfiles" Grid.Column="2" 
                                Content="⚙️ Manage" 
                                Click="BtnManageProfiles_Click" 
                                Style="{StaticResource ModernButtonStyle}"
                                Width="90" Height="35"/>
                    </Grid>
                </Border>
            </Grid>
        </GroupBox>

        <!-- Action Buttons -->
        <Border Grid.Row="4" Background="#FF373737" CornerRadius="8" Padding="15" Margin="0,0,0,10">
            <Border.Effect>
                <DropShadowEffect Color="Lime" BlurRadius="4" ShadowDepth="0" Opacity="0.2"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="BtnHelp" 
                        Content="❓ Help" 
                        Click="BtnHelp_Click" 
                        Width="100" Height="40" 
                        FontSize="14"
                        Background="#FF66FF33"
                        Margin="0,0,15,0"
                        Style="{StaticResource ModernButtonStyle}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="6"
                                    BorderThickness="0">
                                <Border.Effect>
                                    <DropShadowEffect Color="Lime" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF77FF44"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF55EE22"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="BtnMix" 
                        Content="🎛️ Mix Audio Files" 
                        Click="BtnMix_Click" 
                        Width="160" Height="40" 
                        FontSize="14"
                        Background="#FF00FF90"
                        Margin="0,0,15,0"
                        Style="{StaticResource ModernButtonStyle}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="6"
                                    BorderThickness="0">
                                <Border.Effect>
                                    <DropShadowEffect Color="Lime" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF00FF66"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF00DD44"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="BtnPreviewMixed" 
                        Content="🔊 Preview Result" 
                        Click="BtnPreviewMixed_Click" 
                        Width="160" Height="40" 
                        FontSize="14"
                        Background="#FF66FF33"
                        IsEnabled="False"
                        Tag="Play"
                        Style="{StaticResource ModernButtonStyle}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="6"
                                    BorderThickness="0">
                                <Border.Effect>
                                    <DropShadowEffect Color="Lime" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF77FF44"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF55EE22"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Background" Value="#FF666666"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>